<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.highfive.chajiserver.mapper.MemberMapper">

    <insert id="save" parameterType="com.highfive.chajiserver.dto.MemberDTO">
        insert into member (user_id, password, user_name)
        values (#{userId}, #{password}, #{userName})
    </insert>

    <select id="findByUserId" resultType="com.highfive.chajiserver.dto.MemberDTO">
        select * from member where user_id=#{userId}
    </select>


</mapper>